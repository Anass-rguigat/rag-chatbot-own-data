# Copy to .env and set your values. All settings are optional except GROQ_API_KEY (if using Groq).
# COMPLETE mode = sidebar "COMPLETE (Server/API)". FAST mode = sidebar "FAST (Laptop)".

# -----------------------------------------------------------------------------
# Required when using API (Groq)
# -----------------------------------------------------------------------------
GROQ_API_KEY=your-groq-api-key-here

# -----------------------------------------------------------------------------
# Shared (both modes)
# -----------------------------------------------------------------------------
DATA_FOLDER_PATH=./fin_ed_docs
TEMPERATURE=0
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DEVICE=auto
MAX_SOURCE_PREVIEW=800
OLLAMA_BASE_URL=http://localhost:11434
USE_OLLAMA=false

# -----------------------------------------------------------------------------
# COMPLETE mode (Server/API) — used when Mode = COMPLETE in sidebar
# -----------------------------------------------------------------------------
CHUNK_SIZE=2000
CHUNK_OVERLAP=450
RETRIEVER_K=15
RETRIEVER_FETCH_K=40
GROQ_MODEL=llama-3.3-70b-versatile
GROQ_MAX_TOKENS=8192
OLLAMA_MODEL=tinyllama
OLLAMA_NUM_PREDICT=2048
LLM_TIMEOUT_SEC=90
VECTORSTORE_CACHE_PATH=./.vectorstore

# -----------------------------------------------------------------------------
# FAST mode (Laptop) — used when Mode = FAST in sidebar
# -----------------------------------------------------------------------------
CHUNK_SIZE_FAST=800
CHUNK_OVERLAP_FAST=120
RETRIEVER_K_FAST=5
RETRIEVER_FETCH_K_FAST=15
GROQ_MODEL_FAST=llama-3.1-8b-instant
GROQ_MAX_TOKENS_FAST=512
OLLAMA_MODEL_FAST=phi3:mini
OLLAMA_NUM_PREDICT_FAST=256
LLM_TIMEOUT_FAST=60
VECTORSTORE_CACHE_PATH_FAST=./.vectorstore_fast
